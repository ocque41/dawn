<style>
  /* Include the custom font */
  @font-face {
    font-family: 'Halenoir Bold';
    src: url('{{ 'Halenoir-Bold.otf' | asset_url }}') format('opentype');
    font-weight: bold;
  }

  /* General styles */
  body {
    margin: 0;
    padding: 0;
    font-family: 'Halenoir Bold'; /* Use the custom font */
    background: #fff;
    font-weight: bold; /* Make all text bold */
  }

  /* Style for the logo */
  .logo-link {
    display: block;
    text-align: center;
    margin: 20px auto;
  }

  .logo {
    max-width: 120px;
    height: auto;
  }

  /* Style for the background image */
  .background-image {
    background-image: url('https://cdn.shopify.com/s/files/1/0884/9116/3995/files/12.jpg?v=1728482665');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed; /* Makes the background stay fixed during scrolling */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%; /* Covers the full page */
    opacity: 0.6;
    z-index: -1;
  }

  /* Product container */
  .product-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 80px;
    opacity: 0;
    animation: fadeIn 1.5s ease-in-out forwards;
  }

  /* Wrapper for product images */
  .product-image-wrapper {
    position: relative;
    width: 100%;
    max-width: 1000px;
    overflow: hidden; /* Ensure both front and back images fit inside the wrapper */
  }

  .product-image {
    width: 100%;
    height: auto;
    object-fit: contain; /* Make sure both front and back images maintain their aspect ratio */
    transition: opacity 0.5s ease;
  }

  .back-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    object-fit: contain; /* Ensures the back image fits without overflowing */
    transition: opacity 0.5s ease;
  }

  .product:hover .back-image {
    opacity: 1;
  }

  .product:hover .front-image {
    opacity: 0;
  }

  .product-info {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.5s ease;
    text-align: center;
    font-family: 'Halenoir Bold';
  }

  .product:hover .product-info {
    opacity: 1;
    transform: translateY(0);
  }

  .product-title {
    font-size: 2rem; /* Increased font size */
    margin: 10px 0 5px 0;
  }

  .product-price {
    font-size: 1.5rem; /* Increased font size */
  }

  /* Make price link look like normal text */
  .no-link-style {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  /* Responsive product scaling */
  @media (max-width: 768px) {
    .product-image-wrapper {
      max-width: 800px;
    }
  }

  @media (max-width: 480px) {
    .product-image-wrapper {
      max-width: 600px;
    }
  }

  /* Fade-in animation */
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
